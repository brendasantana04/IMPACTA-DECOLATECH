@using ProjetoMyTE.WebApp.Models.Entities
@model ProjetoMyTE.WebApp.Models.Entities.WBS

@{
    ViewData["Title"] = "Incluir WBS";
}

<h1>Incluir WBS</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IncluirWBS">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-select">
                    <option value="0">Selecione o tipo</option>
                    <option value="1">Chargeability</option>
                    <option value="2">Non-Chargeability</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>

            </div>

            <div class="mt-3">
                <input type="submit" value="Criar WBS" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="ListarWBS">Voltar a Lista de WBS</a>
</div>

