@model ProjetoMyTE.WebApp.Models.Entities.Area

@{
    ViewData["Title"] = "Remover Area";
}

<h1>Remover a Área</h1>
<hr />
<h3>Você tem CERTEZA que deseja remover essa área?</h3>
<div>
    <input type="hidden" asp-for="ID" />
    <form asp-action="RemoverArea">
        <div class="mt-3">
            <input type="submit" value="Sim, tenho certeza!" class="btn btn-danger" />
        </div>
        <div class="mt-3">
            <a asp-action="ListarAreas" class="mt-3">Não, quero voltar para a lista</a>
        </div>
    </form>
</div>
